<GridPane fx:id="gridPaneMachineTabComponent" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.body.machine.UBoatMachineController">
  <columnConstraints>
    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="-Infinity" prefWidth="300.0" />
    <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="-Infinity" prefWidth="300.0" />
  </columnConstraints>
  <rowConstraints>
    <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="130.0" valignment="CENTER" vgrow="NEVER" />
    <RowConstraints fillHeight="false" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="270.0" valignment="TOP" vgrow="NEVER" />
  </rowConstraints>
   <children>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="600.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
         <children>
            <Label alignment="CENTER" text="Machine Details" textAlignment="CENTER">
               <font>
                  <Font name="Bauhaus 93" size="25.0" />
               </font>
            </Label>
            <TableView fx:id="tableViewMachineDetails" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" VBox.vgrow="NEVER">
               <columns>
                  <TableColumn fx:id="tableColumnABC" editable="false" prefWidth="75.0" sortable="false" text="Alphabet" />
                  <TableColumn fx:id="tableColumnRotorsCount" editable="false" prefWidth="75.0" sortable="false" text="Rotors Count" />
                  <TableColumn fx:id="tableColumnAvailableRotors" editable="false" prefWidth="75.0" sortable="false" text="Available Rotors" />
                  <TableColumn fx:id="tableColumnAvailableReflectors" editable="false" prefWidth="75.0" sortable="false" text="Available Reflectors" />
               </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </VBox>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="270.0" prefWidth="600.0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1" GridPane.valignment="TOP" GridPane.vgrow="NEVER">
         <children>
            <Label alignment="TOP_CENTER" text="Machine Calibration" textAlignment="CENTER">
               <font>
                  <Font name="Bauhaus 93" size="25.0" />
               </font>
            </Label>
            <Accordion minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="600.0">
              <panes>
                <TitledPane animated="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="175.0" prefWidth="600.0" text="Choose Rotors">
                     <content>
                        <HBox prefHeight="100.0" prefWidth="200.0">
                           <children>
                              <ScrollPane fitToHeight="true" fitToWidth="true" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="295.0" HBox.hgrow="NEVER">
                                 <content>
                                    <FlowPane fx:id="flowPaneRotorsBank" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="130.0" prefWidth="280.0" />
                                 </content>
                              </ScrollPane>
                              <VBox alignment="TOP_CENTER" prefHeight="129.0" prefWidth="281.0" spacing="10.0">
                                 <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Click on the rotors you wish to add to the machine." textAlignment="CENTER" wrappingWidth="200.0">
                                       <font>
                                          <Font size="15.0" />
                                       </font>
                                    </Text>
                                    <Button fx:id="buttonRetryRotors" mnemonicParsing="false" onAction="#onRetryRotors" text="Retry" textAlignment="CENTER" />
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </content>
                  </TitledPane>
                <TitledPane animated="false" text="Choose A Reflector">
                     <content>
                        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" spacing="20.0">
                           <children>
                              <ComboBox fx:id="comboBoxReflector" prefWidth="150.0" promptText="Reflector ID's" />
                              <Button fx:id="buttonRetryReflector" mnemonicParsing="false" text="Retry" textAlignment="CENTER" />
                           </children>
                        </VBox>
                     </content>
                  </TitledPane>
              </panes>
            </Accordion>
            <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="600.0" spacing="100.0">
               <children>
                  <Button fx:id="buttonSetCodeConfig" mnemonicParsing="false" text="Set Code Configuretion" textAlignment="CENTER" />
                  <Button fx:id="buttonGenerateCodeConfig" mnemonicParsing="false" text="Generate Code Configuration" textAlignment="CENTER" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</GridPane>
